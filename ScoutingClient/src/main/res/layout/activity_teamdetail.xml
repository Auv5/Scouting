<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="40dp"
    android:background="@drawable/appbg"
    tools:context=".TeamDetail"
    android:id="@+id/root">
    <View android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:orientation="vertical"
        android:id="@+id/gen_stats_lv_tv"
        android:background="#CFCFCF">
        <RelativeLayout
                      android:layout_width="match_parent"
                      android:layout_height="0dp"
                      android:layout_weight="2"
                      android:id="@+id/gen_stats_enc"
                      android:background="#C0C0C0">
            <TextView android:id="@+id/gen_stats_tv"
                      android:text="@string/gen_stats"
                      android:textSize="20sp"
                      android:textStyle="bold"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                android:layout_centerVertical="true" />
            <ImageButton android:id="@+id/edit_gen_stats"
                         android:src="@drawable/edit"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>
        <ListView android:id="@+id/gen_stats"
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_gravity="center"
                  android:paddingBottom="10dp"
                  android:layout_weight="7"/>
    </LinearLayout>

    <View android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:orientation="vertical"
        android:id="@+id/match_stats_lv_tv"
        android:background="#CFCFCF">
        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:id="@+id/match_stats_enc"
        android:background="#C0C0C0">
            <TextView android:id="@+id/match_stats_tv"
                android:text="@string/match_stats"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true" />
            <ImageButton android:id="@+id/add_new_match"
                android:src="@drawable/new_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>
        <ListView android:id="@+id/match_stats"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="7"/>
    </LinearLayout>
    <View android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>
