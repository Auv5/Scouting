<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
    <LinearLayout android:id="@+id/question_answer"
                  android:paddingLeft="12dp"
                  android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">
        <TextView android:id="@+id/li_question"
                  android:text="@string/default_question"
                  android:textSize="14sp"
                  android:paddingRight="2dp"
                  android:layout_width="0dip"
                  android:layout_height="wrap_content"
                  android:layout_gravity="left"
                  android:gravity="fill_horizontal"
                  android:layout_weight="1"/>
        <LinearLayout android:id="@+id/li_answer"
                      android:layout_gravity="right"
                      android:layout_width="0dip"
                      android:layout_height="wrap_content"
                      android:gravity="fill_horizontal"
                      android:layout_weight="1">
            <include layout="@layout/answer_listitem_qanda"/>
        </LinearLayout>
    </LinearLayout>

    <View android:layout_width="2dip"
          android:layout_height="0dip"
          android:layout_centerHorizontal="true"
          android:layout_alignParentTop="true"
          android:layout_alignBottom="@id/question_answer"
          android:background="@android:color/darker_gray"/>
</RelativeLayout>