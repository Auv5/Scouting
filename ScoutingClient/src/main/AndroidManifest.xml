<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.allsaintsrobotics.scouting"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="16" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/astechz_logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.allsaintsrobotics.scouting.LoginActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize|stateVisible" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.allsaintsrobotics.scouting.TeamList"
            android:label="@string/title_activity_team_list"
            android:parentActivityName="com.allsaintsrobotics.scouting.LoginActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.allsaintsrobotics.scouting.LoginActivity" />
        </activity>
        <activity
            android:name="com.allsaintsrobotics.scouting.TeamDetail"
            android:label="@string/title_activity_team_detail"
            android:parentActivityName="com.allsaintsrobotics.scouting.TeamList" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.allsaintsrobotics.scouting.TeamList" />
        </activity>
        <activity
            android:name="com.allsaintsrobotics.scouting.ScoutEdit"
            android:label="@string/title_activity_scout_edit" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.allsaintsrobotics.scouting.TeamDetail" />
        </activity>
        <activity
            android:name="com.allsaintsrobotics.scouting.NewTeam"
            android:label="@string/title_activity_new_team"
            android:parentActivityName="com.allsaintsrobotics.scouting.TeamList" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.allsaintsrobotics.scouting.TeamList" />
        </activity>
    </application>

</manifest>
